{
  "name": "maginai",
  "version": "0.2.0",
  "author": "Spoonail",
  "repository": {
    "type": "git",
    "url": "https://github.com/Spoonail-Iroiro/maginai"
  },
  "files": [
    "lib/"
  ],
  "type": "module",
  "main": "",
  "types": "./lib/loader.d.ts",
  "scripts": {
    "dev": "genversion --es6 ./js/mod/modules/version.js && vite build",
    "build:docs": "typedoc",
    "build:package": "genversion --es6 ./js/mod/modules/version.js && tsc",
    "build:dist": "npm run dev && npm run build:package && node ./tools/release.js && node ./tools/releaseSampleMod.js",
    "test": "vitest",
    "test:dev": "npx vitest --inspect-brk --test-timeout 100000 --single-thread",
    "preview:docs": "typedoc --excludeExternals",
    "genversion": "genversion --es6 ./js/mod/modules/version.js",
    "npver": "npm version --no-commit-hooks --no-git-tag-version",
    "bump-version:major": "npm run npver -- major && npm run genversion",
    "bump-version:minor": "npm run npver -- minor && npm run genversion",
    "bump-version:patch": "npm run npver -- patch && npm run genversion"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "genversion": "^3.1.1",
    "typedoc": "^0.25.1",
    "typedoc-plugin-missing-exports": "^2.1.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vitest": "^0.34.4"
  },
  "dependencies": {
    "fastest-levenshtein": "^1.0.16",
    "loglevel": "^1.8.1",
    "loglevel-plugin-prefix": "^0.8.4"
  }
}
